{% extends '_template.html.twig' %}
{% block content %}
    {% for result in results %}
    <div class="box">
        <article class="media">
            <div class="media-left">
                <figure class="image is-128x128">
                    <img src="https://loremflickr.com/256/256/album,music/all?lock=ID" alt="Image">
                </figure>
            </div>
            <div class="media-content">
                <div class="content">
                    <p>
                        <a href="#" class="has-text-primary">
                            <strong>{{ result.title }}</strong>
                        </a>
                        <small>{{ result.releasedAt|date('Y-m-d')}}</small>
                        <br>
                        <small>
                            <strong>Artiste:</strong>
                            <a href="#">{{ result.artist.name }}</a>
                        </small><br>
                        <small>
                            <strong>Label:</strong>
                            <a href="#">{{ result.artist.name }}</a>
                        </small><br>
                        {{ result.description }}
                    </p>
                </div>
            </div>
        </article>
    </div>
    {% endfor %}
{% endblock %}